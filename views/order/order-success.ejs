<div class="container mx-auto p-8 bg-white shadow-xl rounded-lg max-w-3xl my-20 border border-gray-200">
    <!-- Success Icon and Header -->
    <div class="text-center">
        <h1 class="text-3xl font-bold text-green-600">Order Successfully Placed!</h1>
        <p class="mt-2 text-gray-600">Thank you for shopping with us. Your order is being processed.</p>
    </div>

    <!-- Order Summary -->
    <div class="mt-8">
        <h2 class="text-xl font-semibold text-gray-800 border-b pb-2">Order Summary</h2>
        <ul class="list-none space-y-4 mt-4">
            <% order.items.forEach(item=> { %>
                <li class="flex justify-between items-center">
                    <div>
                        <span class="font-medium text-gray-800">
                            <%= item.quantity %> x <%= item.productId.name %>
                        </span>
                    </div>
                    <div class="text-gray-600">$<%= item.price %> each</div>
                </li>
                <% }) %>
        </ul>
    </div>

    <!-- Shipping Address -->
    <div class="mt-8">
        <h2 class="text-xl font-semibold text-gray-800 border-b pb-2">Shipping Address</h2>
        <div class="mt-4 text-gray-700">
            <p><strong>Name:</strong>
                <%= order.address.firstName %>
                    <%= order.address.lastName %>
            </p>
            <p><strong>Address:</strong>
                <%= order.address.address %>, <%= order.address.city %>, <%= order.address.province %>, <%=
                                order.address.zipCode %>
            </p>
            <p><strong>Country:</strong>
                <%= order.address.country %>
            </p>
            <p><strong>Phone:</strong>
                <%= order.address.phoneNumber %>
            </p>
        </div>
    </div>

    <!-- Payment Information -->
    <div class="mt-8">
        <h2 class="text-xl font-semibold text-gray-800 border-b pb-2">Payment Details</h2>
        <p class="mt-4 text-gray-700"><strong>Method:</strong>
            <%= order.payment.method %>
        </p>
        <p class="text-gray-700"><strong>Total:</strong> $<%= order.totalAmount.toFixed(2) %>
        </p>
    </div>

    <!-- Action Buttons -->
    <div class="mt-8 text-center">
        <a href="/" class="text-blue-600 hover:text-blue-800 underline">Return to Homepage</a>
        <a href="/cart" class="ml-4 text-gray-600 hover:text-gray-800 underline">Back to Cart</a>
    </div>
</div>