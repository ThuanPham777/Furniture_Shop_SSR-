<!-- contact Us Page -->
<div class="w-full min-h-screen flex flex-col justify-center items-center py-14 px-10">
    <!-- contact Heading -->
    <h1 class="text-4xl font-bold mb-4 text-gray-800 text-center">Contact Us</h1>
    <p class="text-gray-600 mb-8 w-11/12 md:w-2/3 text-center leading-relaxed">
        Have questions or need assistance? Feel free to reach out to us through the contact form below, or you can reach
        us directly via phone or email.
    </p>

    <!-- contact Info -->
    <div class="mb-8 text-center">
        <p class="text-gray-700 font-semibold text-lg mb-2">Call Us</p>
        <p class="text-gray-600 mb-4">+1 (555) 123-4567</p>

        <p class="text-gray-700 font-semibold text-lg mb-2">Email Us</p>
        <p class="text-gray-600 mb-4">contact@samplecompany.com</p>
    </div>

    <!-- contact Form -->
    <div class="w-11/12 md:w-1/2 bg-white rounded-lg shadow-md p-8">
        <form action="<%= formActionUrl %>" method="POST" class="flex flex-col">
            <label class="text-gray-700 font-semibold mb-2">Name</label>
            <input type="text" name="name" class="mb-4 p-3 border rounded-lg outline-none focus:border-lime-500"
                placeholder="Your Name" required />

            <label class="text-gray-700 font-semibold mb-2">Email</label>
            <input type="email" name="email" class="mb-4 p-3 border rounded-lg outline-none focus:border-lime-500"
                placeholder="Your Email" required />

            <label class="text-gray-700 font-semibold mb-2">Message</label>
            <textarea name="message" class="mb-6 p-3 border rounded-lg outline-none focus:border-lime-500" rows="5"
                placeholder="Your Message" required></textarea>

            <button type="submit"
                class="bg-lime-500 text-white font-semibold py-3 rounded-lg hover:bg-lime-600 transition duration-300">
                Send Message
            </button>
        </form>
    </div>
</div>